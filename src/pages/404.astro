---
import Container from "../components/global/Container.astro";
import Section from "../components/global/Section.astro";
import RootLayout from "../layouts/RootLayout.astro";
---

<RootLayout title="Page not found">
  <Section class="h-full">
    <Container
      class:list={[
        "font-mono sm:text-center",
        "grid place-content-center gap-4 max-sm:place-items-start",
      ]}
    >
      <h1 class="text-4xl font-bold">404 - Page Not Found</h1>
      <p class="text-accent-dark dark:text-accent-light">
        The page you are looking for does not exist.
      </p>
      <a href={"/"} class="transition hover:underline">Go back home</a>
    </Container>
  </Section>
</RootLayout>

<style>
  :root {
    --accent-hue: 0;
  }
</style>
