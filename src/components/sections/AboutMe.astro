---
import GradientText from "../global/GradientText.astro";
import SectionHeading from "../global/SectionHeading.astro";
import Avatar from "../Avatar.astro";
import Section from "../global/Section.astro";
import Highlight from "../global/Highlight.astro";
import TagCodeBlock from "../TagCodeBlock";
---

<Section id="about-me">
  <SectionHeading as="h2" class="">
    <GradientText>About Me</GradientText>
  </SectionHeading>

  <article class="info relative isolate py-8">
    <div class="prose dark:prose-invert">
      <p>
        My name is Luis Llanes, I'm a Software Engineering student mainly
        interested in
        <Highlight>front-end</Highlight>web development. With
        <Highlight>strong common sense,</Highlight>
        <Highlight>logical thinking,</Highlight> and <Highlight
          >problem-solving skills,</Highlight
        > I strive for excellence in everything I do.
      </p>

      <TagCodeBlock label="Status" className="text-xl" client:idle>
        <p class="m-0 p-0 text-muted-foreground">
          Currently looking for challenging opportunities to continue expanding
          my abilities, committed to learning new technologies and frameworks.
        </p>
      </TagCodeBlock>
    </div>

    <div class="avatar mx-auto size-fit overflow-hidden rounded-full">
      <Avatar />
    </div>
  </article>
</Section>

<style>
  .info {
    display: grid;
    gap: 0.5rem;
    align-items: center;
  }

  .avatar {
    z-index: -1;
    transition: all 0.3s ease-in-out;
    right: -38px;
  }

  @media (min-width: 768px) {
    .info {
      grid-template-columns: 2fr 1fr;
    }

    .avatar {
      position: absolute;
      scale: 0.8;
      margin-right: -24px;
    }
  }

  @media (min-width: 1024px) {
    .avatar {
      margin-right: 0px;
      scale: 1;
    }
  }
</style>
