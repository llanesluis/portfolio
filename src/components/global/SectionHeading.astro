---
import type { HTMLAttributes } from "astro/types";

interface Props
  extends HTMLAttributes<"h1" | "h2" | "h3" | "h4" | "h5" | "h6"> {
  as: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { as: Component = "h2", class: className, ...props } = Astro.props;
---

<Component class:list={["font-onest text-4xl font-bold", className]} {...props}>
  <slot />
</Component>
